<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/letter_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/left_logo_imageview"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@color/solid_one"
        android:layout_marginTop="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="25dp"/>

    <ImageView
        android:id="@+id/right_logo_imageview"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@color/solid_two"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="-50dp"/>

    <TextView
        android:id="@+id/desc_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Converse"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:text="Native messaging"
        android:textColor="@color/grey_600"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/sign_up_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="SIGN UP"
        android:textColor="@color/white"
        android:layout_marginTop="150dp"
        android:background="@drawable/shape_btn_blue"/>

    <LinearLayout
        android:id="@+id/signin_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Have an account?"
            android:textColor="@color/grey_600"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="12sp"
            android:text="Sign In?"
            android:textColor="@color/solid_one"/>
    </LinearLayout>
</LinearLayout>
